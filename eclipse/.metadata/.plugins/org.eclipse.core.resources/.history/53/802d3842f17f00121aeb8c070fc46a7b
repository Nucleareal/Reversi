package Controler;

import Model.Position;

public class ViewToModel
{
	public static void onClicked(IStoneReceptorModel model, IStoneReceptorView view, Position pos)
	{
		if(model.canPlaceOnPosition(pos))
		{
			model.place(pos);
			model.reverse(pos);
			model.nextPlayer();
		}
		Controler.setBoardToView();
	}
}
